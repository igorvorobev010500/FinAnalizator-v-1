<UserControl x:Class="FinAnalizator_v_1.Pages.Expenses"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinAnalizator_v_1.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="ExpensesDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Foreground="Black"
                  IsReadOnly="True"
                  Margin="10"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="День" Binding="{Binding Day}" Width="100"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Expense}" Width="100"/>
                <DataGridTextColumn Header="Валюта" Binding="{Binding Value}" Width="80"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding ExpenseInfo}" Width="120"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
