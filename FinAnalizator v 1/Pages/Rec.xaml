<UserControl x:Class="FinAnalizator_v_1.Pages.Rec"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinAnalizator_v_1.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>
        <ScrollViewer Margin="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Рекомендации" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           Foreground="#0066CC"/>
                <TextBlock x:Name="recommendationsBlock" 
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="#333333"
                           Text="Здесь будут советы"
                           Padding="0,0,0,10"
                           MaxWidth="800"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

